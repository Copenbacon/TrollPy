{% extends "layout.jinja2" %}
{% block body %}
{% if user.admin %}
    <form method="POST">
        <input type="hidden" name="csrf_token" value="{{ request.session.get_csrf_token() }}"/>
        <p>
            <label for="statement">Trollpy will say this: </label>
            <input type="text" name="statement"/>
        </p>
        <p>
            <label for="killscore_id">Level of Severity: (-8 is the sickest of burns, 8 is meh) </label>
            <input type="number" name="killscore_id" min="-8" max="8">
        </p>
        <input type="submit" value="submit"/>
    </form>
    <ul>
    <table>
    <th>Level</th><th>Phrase</th>
    {% for killscore in killscore %}
    <tr>
        <td>{{ killscore.killscore_id }}</td>
        <td>{{ killscore.statement }}</td>
        <td><a href="/delete/{{ killscore.id }}">Delete</a></td>
    </tr>
    {% endfor %}
    </table>
{% else %}
<p>You must be an admin to view this page.</p>
{% endif %}
{% endblock %}