{% extends "layout.jinja2" %}
{% block body %}

<ul>
    <li>Username: {{user.username}}</li>
    <li>Name: {{user.first_name}} {{user.last_name}}</li>
    <li>Email: <a href="mailto:{{user.email}}">{{user.email}}</a></li>
    {% if user.admin %}
    <li>Admin Status: {{ user.admin }}</li>
    {% endif %}
</ul>

<input type="button" class="button hollow" id="editprofile" value="Edit Profile"/>

<form method="POST" id="editform">
    <input type="hidden" name="csrf_token" value="{{ request.session.get_csrf_token() }}">
</form>

<script>
 $(function(){
        $('#editprofile').click(function() {
            $('#editform').append('<p><label for="password">New Password: </label><input type="password" name="password" required/></p><p><label for="first_name">First Name: </label><input type="text" name="first_name" value="{{ user.first_name }}" required/></p><p><label for="last_name">Last Name: </label><input type="text" name="last_name" value="{{ user.last_name }}" required/></p><p><label for="email">Email: </label><input type="email" name="email" value="{{ user.email }}" required/></p><input type="submit" class="button hollow" value="Submit"/>');
        });
    });
</script>

{% endblock %}